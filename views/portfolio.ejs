<%- include("partials/header") %>
<%- include("partials/navbar") %> 
<div class="container">
  <form action=<%= location %> method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input id="title" class="form-control" type="text" name="title" value="<% if (editmode) { %><%= title %><% } %>" required/>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea
        id="description"
        class="form-control"
        name="description"
        required
      ><% if (editmode) { %><%= description %><% } %></textarea>
    </div>
    <div class="form-group">
      <label for="imageUrl">Image URL</label>
      <input id="imageUrl" class="form-control" type="text" name="imageURL" value="<% if (editmode) { %><%= imageURL %><% } %>" required/>
    </div>
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
<%- include("partials/footer") %>
