      <a href="http://localhost:5000/addabout"><button class="btn btn-success text-center mb-10">Add New
          About</button></a>
    </div>
    <ul class="timeline mt-5">
      <% abouts.forEach(async (about, index) => { %>
      <%  if( index % 2 == 0){ %>
      <li>
        <% } else { %>
      <li class="timeline-inverted">
        <% } %>
        <div class="timeline-image">
          <img class="rounded-circle img-fluid" src="<%= about.imageURL %> " alt="" />
        </div>
        <div class="timeline-panel">
          <div class="timeline-heading">
            <h4><%= about.year %> </h4>
            <h4 class="subheading"><%= about.title %> </h4>
          </div>
          <div class="timeline-body">
            <p class="text-muted">
              <%= about.description %>
            </p>
          </div>
          <a href="http://localhost:5000/editabout/<%= about._id %> ">
            <button class="btn btn-warning mb-1 mt-1">Edit</button>
          </a>
          <div class="d-inline-lg">
            <form action="http://localhost:5000/postdeleteabout/<%= about._id %>" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
